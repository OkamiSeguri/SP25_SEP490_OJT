@model FOMSDTO.StudentGradeDTO

@{
    ViewData["Title"] = "Create";
}

<h1>Create</h1>

<h4>StudentGradeDTO</h4>
<hr />
<div class="row">
    <div class="col-md-4">
        <form asp-action="Create">
            <div asp-validation-summary="ModelOnly" class="text-danger"></div>
            <div class="form-group">
                <label asp-for="UserId" class="control-label"></label>
                <input asp-for="UserId" class="form-control" readonly />
                <span asp-validation-for="UserId" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="CurriculumId" class="control-label"></label>
                <select asp-for="CurriculumId" asp-items="ViewBag.CurriculumList" class="form-control">
